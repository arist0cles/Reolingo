<set android:ordering="sequentially"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <set>
        <objectAnimator
            android:propertyName="x"
            android:duration="500"
            android:valueTo="100"
            android:valueType="floatType"/>
        <objectAnimator
            android:propertyName="y"
            android:duration="500"
            android:valueTo="0"
            android:valueType="floatType"/>
    </set>
</set>