<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reo.lingo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/girl_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/girl_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ModuleActivity"
            android:label="@string/title_activity_question"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.TranslateActivity"
            android:label="@string/title_activity_translate_question"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activities.TopicSelectActivity"
            android:label="Select Topic"></activity>
        <activity
            android:name=".Activities.ModuleSelectActivity"
            android:label="Select Module"></activity>
    </application>

</manifest>