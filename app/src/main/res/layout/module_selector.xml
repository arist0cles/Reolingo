<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/module1"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="10sp">

        <TextView
            android:id="@+id/module1_title"
            android:text="Challenge 1"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:textSize="@dimen/module_text_size"
            android:layout_marginTop="@dimen/module_text_top_margin"
            android:layout_marginLeft="@dimen/module_text_left_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/module1_image"
            android:layout_width="@dimen/module_image_size"
            android:layout_height="@dimen/module_image_size"
            android:src="@drawable/plate"
            android:layout_alignParentRight="true"
            />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/module2"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="10sp">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/module2_title"
                    android:text="Challenge 2"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:textSize="@dimen/module_text_size"
                    android:layout_marginTop="@dimen/module_text_top_margin"
                    android:layout_marginLeft="@dimen/module_text_left_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/module2_locked"
                    android:text="Locked for MVP"
                    android:textSize="@dimen/module_lock_text_size"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="2dp"
                    android:layout_marginLeft="@dimen/module_locked_text_left_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <ImageView
                android:id="@+id/module2_image"
                android:layout_width="@dimen/module_image_size"
                android:layout_height="@dimen/module_image_size"
                android:src="@drawable/coffee"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/module3"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="10sp">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/module3_title"
                    android:text="Challenge 3"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_marginTop="@dimen/module_text_top_margin"
                    android:layout_marginLeft="@dimen/module_text_left_margin"
                    android:textSize="@dimen/module_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/module3_locked"
                    android:text="Locked for MVP"
                    android:textSize="@dimen/module_lock_text_size"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="2dp"
                    android:layout_marginLeft="@dimen/module_locked_text_left_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <ImageView
                android:id="@+id/module3_image"
                android:layout_width="@dimen/module_image_size"
                android:layout_height="@dimen/module_image_size"
                android:src="@drawable/coffee"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/module4"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="10sp">

            <TextView
                android:id="@+id/module4_title"
                android:text="Challenge 4"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:textSize="@dimen/module_text_size"
                android:layout_marginTop="@dimen/module_text_top_margin"
                android:layout_marginLeft="@dimen/module_text_left_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/module4_image"
                android:layout_width="@dimen/module_image_size"
                android:layout_height="@dimen/module_image_size"
                android:src="@drawable/coffee"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.v7.widget.LinearLayoutCompat>