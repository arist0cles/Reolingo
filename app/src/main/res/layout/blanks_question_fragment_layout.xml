<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/question_title_bottom_margin"
        android:text="Finish this sentence:"
        android:textColor="#000"
        android:textSize="@dimen/question_title_font_size" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/question_title_bottom_margin"
        android:text=""
        android:textColor="#000"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/blankAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="_____"
        android:textColor="#000"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

    <TextView
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/blanks_answer_padding"
        android:layout_weight="1"
        android:text=""
        android:textColor="#000"
        android:textSize="@dimen/question_font_size" />

    <TextView
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/blanks_answer_padding"
        android:layout_weight="1"
        android:text=""
        android:textColor="#000"
        android:textSize="@dimen/question_font_size" />

        <TextView
            android:id="@+id/answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/blanks_answer_padding"
            android:layout_weight="1"
            android:text=""
            android:textColor="#000"
            android:textSize="@dimen/question_font_size" />

        <TextView
            android:id="@+id/answer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/blanks_answer_padding"
            android:layout_weight="1"
            android:text=""
            android:textColor="#000"
            android:textSize="@dimen/question_font_size" />

        <TextView
            android:id="@+id/answer5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/blanks_answer_padding"
            android:layout_weight="1"
            android:text=""
            android:textColor="#000"
            android:textSize="@dimen/question_font_size" />

        <TextView
            android:id="@+id/answer6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/blanks_answer_padding"
            android:layout_weight="1"
            android:text=""
            android:textColor="#000"
            android:textSize="@dimen/question_font_size" />

    </LinearLayout>

</LinearLayout>
